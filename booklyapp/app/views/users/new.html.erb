<!-- Code taken from https://www.railstutorial.org/book/sign_up -->

<% provide(:title, 'Sign up') %>
<h1 class="center">Sign up</h1>

<div class="row"><span id="banner"><%= if (@banner != nil) then @banner end %></span></div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>